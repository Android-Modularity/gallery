<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_gravity="center"
    android:background="@android:color/white"
    android:padding="1dp">

    <ImageView
        android:id="@+id/iv_select_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#efefef"
        android:scaleType="centerCrop"/>

    <View
        android:id="@+id/view_click_cover"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="right"/>

    <View
        android:id="@+id/cover_select_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#55000000"
        android:visibility="gone"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end">

        <com.march.gallery.ShopIconView
            android:id="@+id/siv_select_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="2dp"
            android:gravity="center"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/tv_select_image"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/gallery_selector_number"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="gone"
            tools:text="12"/>
    </FrameLayout>

    <View
        android:id="@+id/view_single_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>